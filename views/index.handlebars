<h1>Eat Da Burger!</h1>
 <h1> <img src="http://www.restaurantbusinessonline.com/sites/default/files/styles/731_x_411/public/wendys-black-bean-burger.png?itok=3nin1Kfk"> </h1>

<div id="uneaten">
  <h2>Burgers!</h2>

  <ul>
    {{#each burger}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method = "POST">
            <input type="hidden" name="devoured" value="1">
            <button type="submit">EAT IT!</button>
          </form>

        
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div id ="eaten">
  <h2>Devoured Burgers!</h2>
  <ul>
    {{#each burger}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div id="add">
  <h2>Add a Burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Burger:</label>
      <input type="text" id="ca" name="name">
    </div>


    <button type="submit">Add Burger</button>
  </form>
</div>